<div class="row">
  <div class="col-sm-12 col-md-12 main">
    <h1 class="page-header">Galleries</h1>
      <div class="row placeholders">
        <div class="col-sm-12">
          <p>
            <%= paginate @galleries %>
            <text>
              Download: <%= link_to "CSV", admin_mobile_apps_path(format: "csv") %> 
            </text>
          </p>
          <table class="table table-striped">
          <thead>
          <tr>
            <th><%= sortable "name", "Name" %></th>
            <th>Description</th>
            <th>Number of Apps</th>
            <th class = "lastlinks">Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @galleries.each do |gallery| %>
          	<tr class = "tablerow">
          	  <td class = "outlet_data"><%= gallery.name %></td>
              <td class = "outlet_data"><%= gallery.description %></td>
          	  <td class = "outlet_data"><%= gallery.mobile_apps.count %></td>
              <td class = "outlet_data lastlinks">
                <ul class = "gly">
                  <li><%= link_to admin_gallery_path(gallery) do %> <i class = "glyphicon glyphicon-info-sign"></i> <% end %></li>
                  <li><%= link_to edit_admin_gallery_path(gallery) do %> <i class = "glyphicon glyphicon-pencil"></i> <% end %></li>
                  <li><%= link_to history_admin_gallery_path(gallery) do %><i class = "glyphicon glyphicon-book"></i> <% end %> </li>
                  <li class = "destroy"><%= link_to admin_gallery_path(gallery), method: :delete, :class => "delete", confirm: 'Are you certain you want to delete this?' do %><i class = "glyphicon glyphicon-remove"></i> <% end %> </li>
                </ul>
              </td>   
          	</tr>
          <% end %>
          </tbody>
          </table>
          <p>
            <text>
              Download: <%= link_to "CSV", admin_mobile_apps_path(format: "csv") %> 
            </text>
            <%= paginate @galleries %>
          </p>
        </div>
    </div>
  </div>
</div>